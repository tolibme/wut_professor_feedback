# ===========================================
# WUT Professor Feedback Bot Configuration
# ===========================================
# Copy this file to .env and fill in your actual values

# ----- Telegram Bot Token -----
# Get from @BotFather on Telegram (https://t.me/BotFather)
# This is ONLY for the student-facing query bot
TELEGRAM_BOT_TOKEN_QUERY=1234567890:ABCdefGHIjklMNOpqrsTUVwxyz-ABCDEFG

# ----- Telegram API Credentials (REQUIRED) -----
# Get from https://my.telegram.org/apps
# These allow the collector to run as your personal Telegram account (userbot)
TELEGRAM_API_ID=12345678
TELEGRAM_API_HASH=abcdef1234567890abcdef1234567890

# ----- Feedback Group -----
# The Telegram group ID where feedback is posted
# Include the minus sign for groups (e.g., -1001234567890)
FEEDBACK_GROUP_ID=-1001234567890

# ----- Google Gemini AI -----
# Get API key from https://makersuite.google.com/app/apikey
GEMINI_API_KEY=AIzaSyABC123def456GHI789jkl012MNO345pqr

# Optional: force a specific Gemini model. Leave blank to auto-select.
# Examples: gemini-1.5-flash, gemini-1.5-pro
GEMINI_MODEL=

# ----- Database -----
# PostgreSQL connection string
DATABASE_URL=postgresql://postgres:yourpassword@localhost:5432/wuit_feedback

# ----- ChromaDB (Vector Database) -----
CHROMA_PERSIST_DIR=./chroma_data

# ----- Collector Settings -----
BULK_IMPORT_LIMIT=10000
CHECK_INTERVAL_MINUTES=30
MIN_EXTRACTION_CONFIDENCE=0.7

# ----- Admin Settings -----
ADMIN_USER_IDS=123456789,987654321

# ----- Logging -----
LOG_LEVEL=INFO
LOG_FILE=logs/bot.log
